{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "DOM.Iterable", "ES2020"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@site/*": ["./src/*", "./static/*"]
    },
    "typeRoots": [
      "./@types",
      "./node_modules/@types"
    ],
    "types": ["node"]
  },
  "include": [
    "src",
    "src/types",
    "docs",
    "docusaurus.config.ts",
    "sidebars.ts",
    "@types",
    ".storybook/**/*"
  ],
  "exclude": [
    "node_modules",
    "build",
    ".docusaurus"
  ]
} 